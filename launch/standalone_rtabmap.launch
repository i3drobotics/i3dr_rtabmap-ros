<launch>

    <arg name="camera_name" default="phobos_nuclear"/>
    <arg name="localization" default="false"/>

    <node pkg="nodelet" type="nodelet" name="i3dr_disparity2depth_laser" args="standalone rtabmap_ros/disparity_to_depth">
        <remap from="depth" to="/phobos_nuclear/non_laser/depth" />
        <remap from="depth_raw" to="/phobos_nuclear/non_laser/depth_raw" />
        <remap from="disparity" to="/phobos_nuclear/with_laser/disparity" />
    </node>

<!-- STEREO REGISTRATOIN -->
    <include file="$(find i3dr_rtabmap)/launch/stereo_localisation.launch">
        <arg name="localization" value="$(arg localization)"/>
        <arg name="camera_namespace" value="$(arg camera_name)/non_laser"/>
        <arg name="camera_name" value="$(arg camera_name)"/>
        <arg name="depth_odom" value="true"/>
        <!--<arg name="scan3d_odom" value="true"/>-->
        <!--<arg name="depth_icp_odom" value="true"/>-->
        <arg name="disparity2Depth" default="false"/>
        <arg name="rgb_topic" value="/$(arg camera_name)/non_laser/left/image_rect"/>
        <arg name="camera_info_topic" value="/$(arg camera_name)/non_laser/left/camera_info"/>
        <arg name="depth_topic" value="/$(arg camera_name)/non_laser/depth"/>
        <arg name="depth_camera_info_topic" value="/$(arg camera_name)/with_laser/left/camera_info"/>
        <arg name="cloud_topic" value="/$(arg camera_name)/with_laser/points2"/>
        <arg name="base_link_frame" value="$(arg camera_name)_base_link"/>
        <!-- should be set to true if using SGBM or Phobos/Phobos_nuclear as these takes longer to process -->
        <arg name="slow_processing" default="true"/>
    </include>

</launch>